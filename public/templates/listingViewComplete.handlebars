<div id="MoreInfoModal" class="reveal-modal" data-reveal>
  <p class="lead">Full listing:</p>
  <ul class="pricing-table">
    <li class="bullet-item">Available From: {{availableFromDate}}</li>
    <li class="bullet-item">Available To: {{availableToDate}}</li>
    <li class="bullet-item"></li>
    {{#if squareFeet}}<li class="bullet-item">Square Feet: {{sqaureFeet}}</li>{{/if}}
    {{#if heatInc}}<li class="bullet-item">Heat Included</li>{{/if}}
    {{#if waterInc}}<li class="bullet-item">Water Included</li>{{/if}}
    {{#if garbageInc}}<li class="bullet-item">Garbage Included</li>{{/if}}
    {{#if electricInc}}<li class="bullet-item">Electricity Included</li>{{/if}}
    {{#if internetInc}}<li class="bullet-item">Internet Included</li>{{/if}}
    {{#if dogAllowed}}<li class="bullet-item">Dogs Allowed</li>{{/if}}
    {{#if catAllowed}}<li class="bullet-item">Cats Allowed</li>{{/if}}
    {{#if smokingAllowed}}<li class="bullet-item">Smoking Allowed</li>{{/if}}
  </ul>

  <a class="close-reveal-modal">&#215;</a>
</div>