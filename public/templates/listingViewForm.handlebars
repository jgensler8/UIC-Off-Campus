<div class="panel">
  <div class="row">
    <form id="listingForm" class="small-12 large-4 columns">
      <fieldset>
        <div class="row">
          <div class="small-12 large-12 columns">
            <label>I'm trying to:
              <select name="listingType">
                <option value="1">lease a whole apartment</option>
                <option value="2">sub lease a room, for the long term</option>
                <option value="3">sub lease a room, for the short term </option>
                <option value="51">find a whole apartment</option>
                <option value="52">find a room for the long term</option>
                <option value="53">find a room for the short term</option>
              </select>
            </label>
          </div>
        </div>
        <div class="row">
          <div class="small-6 large-6 columns">
            <span data-tooltip class="has-tip" title="a yearly commitment">Long term?</span>
          </div>
          <div class="small-6 large-6 columns">
            <span data-tooltip class="has-tip" title="1 to 3 months or more">Short term?</span>
          </div>
        </div>
      </fieldset>
    </form>
    <form id="criteriaForm" class="small-12 large-8 columns">
      <fieldset>
        <div class="row">
          <div class="small-12 medium-6 large-6 columns">
            <label>Date available from<small> required</small>
              <input name="availableFromDate" type="date" value="{{availableFromDate}}" placeholder="XX/XX/XXXX" required>
            </label>
          </div>
          <div class="small-12 medium-6 large-6 columns">
            <label>Date available to<small> required</small>
              <input name="availableToDate" type="date" value="{{availableToDate}}" placeholder="XX/XX/XXXX" required>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-6 large-6 columns">
            <label>Number and Street Name<small> required</small>
              <input name="addrLine" type="text" value="{{addrLine}}" placeholder="123 S. Halsted St" required>
            </label>
          </div>
          <div class="small-12 medium-6 large-6 columns">
            <label>Apartment Number<br>
              <input name="addrAptNum" type="text" value="{{addrAptNum}}" placeholder="Apt Num">
            </label>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-4 large-4 columns">
            <label>City<small> required</small><br>
              <input name="addrCity" type="text" value="{{addrCity}}" placeholder="City" required>
            </label>
          </div>
          <div class="small-6 medium-4 large-4 columns">
            <label>State<small> required</small><br>
              <input name="addrState" type="text" value="{{addrState}}" placeholder="State" required>
            </label>
          </div>
          <div class="small-6 medium-4 large-4 columns">
            <label>ZIP<small> required</small><br>
              <input name="addrZip" type="number" value="{{addrZip}}" placeholder="ZIP" required>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="small-6 medium-6 large-6 columns">
            <label>Contact Email<small> required</small><br>
              <input name="contactEmail" type="email" value="{{contactEmail}}" placeholder="user@domain.com" required>
            </label>
          </div>
          <div class="small-6 medium-6 large-6 columns">
            <label>Maximum Price<small> required</small>
              <input name="price" type="number" value="{{price}}" required>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-4 large-4 columns">
            <label>Bedrooms<small> required</small>
              <input name="bedrooms" type="number" value="{{bedrooms}}" required>
            </label>
          </div>
          <div class="small-12 medium-4 large-4 columns">
            <label>Full Bathrooms<small> required</small>
              <input name="fullBathrooms" type="number" value="{{fullBathrooms}}" placeholder="full" required>
            </label>
          </div>
          <div class="small-12 medium-4 large-4 columns">
            <label>Half Bathrooms<small> required</small>
              <input name="halfBathrooms" type="number" value="{{halfBathrooms}}" placeholder="half" required>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-4 large-4 columns">
            <label>Utilities Included<br>
              <p>
              <input name="heatInc" type="checkbox" {{#if heatInc}}checked{{/if}}><label>Heat</label><br>
              <input name="waterInc" type="checkbox" {{#if waterInc}}checked{{/if}}><label>Water</label><br>
              <input name="garbageInc" type="checkbox" {{#if garbageInc}}checked{{/if}}><label>Garbage</label><br>
              <input name="electricInc" type="checkbox" {{#if electricInc}}checked{{/if}}><label>Electricity</label><br>
              <input name="internetInc" type="checkbox" {{#if internetInc}}checked{{/if}}><label>Internet</label>
              </p>
            </label>
          </div>
          <div class="small-12 medium-4 large-4 columns">
            <label>Square Feet Of Apartment<br>
              <input name="squareFeet" type="number" pattern="number" value="{{squareFeet}}"><br>
            </label>
            <input name="smokingAllowed" type="checkbox" {{#if smokingAllowed}}checked{{/if}}><label>Smoking Allowed</label><br>
          </div>
          <div class="small-12 medium-4 large-4 columns">
            <label>Pets Allowed<br>
              <p>
              <input name="dogAllowed.name" type="checkbox" {{#if dogAllowed}}checked{{/if}}><label>Dogs Allowed</label><br>
              <input name="catAllowed.name" type="checkbox" {{#if catAllowed}}checked{{/if}}><label>Cats Allowed</label>
              </p>
            </label>
          </div>
        </div>

        <div class="row">
          <div class="small-12 medium-12 large-12 columns">
            <input class="button left" type="submit" name="submit"/>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>

{{#each submitMessages.error}}
<div id="{{name}}" class="reveal-modal" data-reveal>
  <p class="lead">Sorry, we've got an error on our hands</p>
  <p>{{message}}</p>
  <a class="close-reveal-modal">&#215;</a>
</div>
{{/each}}

{{#each submitMessages.success}}
<div id="{{name}}" class="reveal-modal" data-reveal>
  <p class="lead">Horray!</p>
  <p>{{message}}</p>
  <a class="close-reveal-modal">&#215;</a>
</div>
{{/each}}